<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.movies.view.MovieDetailActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/common_margin_default">

            <ImageView
                android:id="@+id/imageMovieDetail"
                android:layout_width="0dp"
                android:layout_height="250dp"
                android:src="@mipmap/ic_launcher"
                android:scaleType="centerCrop"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:contentDescription="@string/app_name" />

            <TextView
                android:id="@+id/titleMovieDetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:layout_marginHorizontal="@dimen/common_margin_default_half"
                android:layout_centerInParent="true"
                android:layout_marginTop="@dimen/common_margin_default_half"
                android:textSize="30sp"
                android:textStyle="bold"
                android:gravity="center_horizontal"
                tools:text="Godzilla"
                app:layout_constraintTop_toBottomOf="@id/imageMovieDetail"/>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="4dp"
                app:cardElevation="4dp"
                android:layout_margin="@dimen/common_margin_default_half"
                android:padding="10dp"
                app:layout_constraintTop_toBottomOf="@id/titleMovieDetail"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp">
                    <TextView
                        android:id="@+id/releaseDateMovieDetail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:gravity="center_horizontal"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        tools:text="2024-01-30"/>
                    <ImageView
                        android:id="@+id/favoriteMovieBtn"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_favorite_border"
                        android:contentDescription="@string/app_name"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"/>
                    <TextView
                        android:id="@+id/overviewLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="17sp"
                        android:text="@string/overview_label"
                        android:textColor="@color/colorPrimary"
                        android:textStyle="bold"
                        android:gravity="center_horizontal"
                        app:layout_constraintTop_toBottomOf="@id/releaseDateMovieDetail"/>
                    <TextView
                        android:id="@+id/overviewMovieDetail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/common_margin_default_min"
                        android:textAlignment="viewStart"
                        android:textSize="17sp"
                        app:layout_constraintTop_toBottomOf="@id/overviewLabel"
                        app:layout_constraintStart_toStartOf="@id/overviewLabel"
                        app:layout_constraintEnd_toEndOf="parent"/>
                    <TextView
                        android:id="@+id/voteAverageMovieLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="17sp"
                        android:textStyle="bold"
                        android:text="@string/vote_average_label"
                        android:layout_marginTop="@dimen/common_margin_default_min"
                        app:layout_constraintTop_toBottomOf="@id/overviewMovieDetail"
                        app:layout_constraintStart_toStartOf="@id/overviewMovieDetail"/>
                    <TextView
                        android:id="@+id/voteAverageMovieDetail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="17sp"
                        android:layout_marginStart="@dimen/common_margin_default_min"
                        tools:text="6.4"
                        app:layout_constraintTop_toTopOf="@id/voteAverageMovieLabel"
                        app:layout_constraintStart_toEndOf="@id/voteAverageMovieLabel"/>
                    <TextView
                        android:id="@+id/popularityLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="17sp"
                        android:textStyle="bold"
                        android:layout_marginTop="@dimen/common_margin_default_min"
                        android:text="@string/popularity_label"
                        app:layout_constraintTop_toBottomOf="@id/voteAverageMovieDetail"
                        app:layout_constraintStart_toStartOf="@id/voteAverageMovieLabel"/>
                    <TextView
                        android:id="@+id/popularityMovieDetail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="17sp"
                        android:layout_marginTop="@dimen/common_margin_default_min"
                        android:layout_marginStart="@dimen/common_margin_default_min"
                        tools:text="2121.21"
                        app:layout_constraintTop_toBottomOf="@id/voteAverageMovieDetail"
                        app:layout_constraintStart_toEndOf="@id/popularityLabel"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>